@model IEnumerable<WebHabr.Models.UserWithRoleViewModel>

@{
    ViewData["Title"] = "Пользователи";
}

<h2 class="mb-4 text-center text-primary">Управление пользователями</h2>

<div class="table-responsive">
    <table class="table table-hover table-striped table-sm">
        <thead class="thead-dark bg-primary text-white">
            <tr>
                <th>Email</th>
                <th>Роль</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.UserID" class="btn btn-outline-primary btn-sm">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@user.UserID" class="btn btn-outline-danger btn-sm">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
