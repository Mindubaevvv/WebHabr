@model IEnumerable<WebHabr.Models.Article>

@{
    ViewData["Title"] = "Мои статьи";
}

<h2>Мои статьи</h2>

<p>
    <a class="btn btn-primary" asp-controller="AuthorArticle" asp-action="Create">Создать новую статью</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Заголовок</th>
            <th>Дата создания</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td>@article.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a class="btn btn-info" asp-controller="AuthorArticle" asp-action="Edit" asp-route-id="@article.Id">Редактировать</a>
                    <a class="btn btn-danger" asp-controller="AuthorArticle" asp-action="Delete" asp-route-id="@article.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>